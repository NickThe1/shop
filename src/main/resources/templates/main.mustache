<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <title>Main</title>
</head>
<body>

<div class="row card" style="margin:20px">
    <form method="post">
        <div class="card-header"><input type="text" name="title" placeholder="Enter your title" /></div>
        <div class="card-body"><input type="text" name="description" placeholder="Description of your product"></div>
        <div class="card-body"><input type="text" name="priceStr" placeholder="price"></div>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>


<form method="post" action="filter" style="margin:20px">
    <input type="text" name="filter">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <button type="submit" class="btn btn-success">Find by title</button>
</form>

{{#products}}
    <div>
        <b class="list-group-item active">id: {{id}}</b>
        <b class="list-group-item">title: {{title}}</b>
        <span class="list-group-item">description: {{description}}</span>
        <i class="list-group-item">price: {{price}}</i>
        <strong class="list-group-item">author name: {{authorName}}</strong>
    </div>
{{/products}}

<a href="/stats">Statistics</a>

<div>
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <input class="btn btn-danger" type="submit" value="Sign Out"/>
    </form>
</div>

</body>
</html>